    projects.reverse().map(project =>  
        <>
          <HorizontalCard
            title={project.title}
            img={project.banner}
            desc={project.desc}
            url={project.redirectUrl ? project.redirectUrl : '#'}
            badge={project.protected ? 'No Preview':''}
            tags={project.stack}
          />
